
<div class="columns is-mobile is-multiline" style="margin-top:1px;">
  <div class="column column is-one-third-desktop is-half-tablet is-three-quarters-mobile">
    <%= link_to 'New Chatroom', new_chatroom_path, class: 'button' %>
  </div>
</div>

<div class="columns is-mobile is-multiline ">
  <% @joined_chatrooms.each do |chatroom| %>
    <div class="column is-one-third-desktop is-half-tablet is-three-quarters-mobile">
      <div class="card">
        <div class="card-content has-text-centered">
          <h3 class="subtitle is-3"><%= chatroom.name %></h3>
        </div>
        <footer class="card-footer">
          <p class="card-footer-item">
            <span>
              <%= link_to 'Leave', chatroom_chatroom_users_path(chatroom), remote: true, method: :delete, class: 'has-text-danger' %>
            </span>
          </p>
        </footer>
      </div>
    </div>
  <% end %>
</div>

<div class="columns is-mobile is-multiline" style="margin-top:1px;">
  <div class="column column is-one-third-desktop is-half-tablet is-three-quarters-mobile">
    <h6 class="subtitle is-6">Other Chatrooms</h6>
  </div>
</div>

<div class="columns is-mobile is-multiline ">
    <% @other_chatrooms.each do |chatroom| %>
      <div class="column is-one-third-desktop is-half-tablet is-three-quarters-mobile">
        <div class="card">
          <div class="card-content has-text-centered">
            <h3 class="subtitle is-3"><%= chatroom.name %></h3>
          </div>
          <footer class="card-footer">
            <p class="card-footer-item">
              <span>
                <%= link_to 'Join', chatroom_chatroom_users_path(chatroom), remote: true, method: :post, class: 'has-text-primary' %>
              </span>
            </p>
          </footer>
        </div>
      </div>
    <% end %>
  </div>

